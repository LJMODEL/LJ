<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login">
    <!--android:singleLine="true" 设置输入只能是单行的
    android:cursorVisible="false" 设置不抢焦点-->
    <com.xw.repo.XEditText
        android:id="@+id/phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="134dp"
        android:layout_marginRight="40dp"
        android:background="@null"
        android:hint="手机号"
        android:lines="1"
        android:numeric="integer"
        android:paddingLeft="45dp"
        android:paddingBottom="15dp"
        android:textColor="#eeeeee"
        android:textColorHint="#919191"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="131dp"
        android:src="@mipmap/log_icon_phone_default_hdpi" />

    <View
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-6dp"
        android:layout_marginRight="60dp"
        android:background="#33ffffff" />

    <com.xw.repo.XEditText
        android:id="@+id/pwd"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:background="@null"
        android:password="true"
        android:hint="登录密码"
        android:lines="1"
        android:paddingLeft="45dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:textColor="#eeeeee"
        android:textColorHint="#919191"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/log_icon_lock_default_hdpi" />

    <ImageView
        android:id="@+id/hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_alignParentRight="true"
        android:layout_marginTop="46dp"
        android:layout_marginRight="65dp"
        android:src="@mipmap/log_icon_eye_default_hdpi" />"/>

    <View
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:layout_below="@+id/pwd"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-6dp"
        android:layout_marginRight="60dp"
        android:background="#33ffffff" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="14dp"
        android:theme="@style/MyCheckBox" />

    <TextView
        android:id="@+id/jizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:text="记住密码"
        android:textColor="#ffffff"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:text="快速注册"
        android:textColor="#ffffff"
        android:textSize="14dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/zhuce"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_button_login"
        android:text="登录"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">

        <View
            android:layout_width="77dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#ffffff"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方微信快速登录"
            android:textColor="#ffffff" />

        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#ffffff"></View>
    </LinearLayout>

    <ImageView
        android:id="@+id/weixin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/l"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@mipmap/log_icon_weixin_default_hdpi" />
</RelativeLayout>