<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login">
    <!--android:singleLine="true" 设置输入只能是单行的
    android:cursorVisible="false" 设置不抢焦点-->
    <com.xw.repo.XEditText
        android:id="@+id/phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="手机号"
        android:textSize="18dp"
        android:paddingLeft="45dp"
        android:paddingBottom="15dp"
        android:lines="1"
        android:textColor="#eeeeee"
        android:numeric="integer"
        />
    <ImageView
        android:layout_marginTop="135dp"
        android:layout_marginLeft="45dp"
        android:src="@mipmap/log_icon_phone_default_hdpi"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <com.xw.repo.XEditText
        android:id="@+id/pwd"
        android:layout_below="@+id/phone"
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="登录密码"
        android:textSize="18dp"
        android:paddingLeft="45dp"
        android:paddingBottom="15dp"
        android:paddingRight="30dp"
        android:textColor="#eeeeee"
        />
    <ImageView
        android:layout_below="@+id/phone"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="45dp"
        android:src="@mipmap/log_icon_lock_default_hdpi"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <ImageView
        android:layout_below="@+id/phone"
        android:layout_marginTop="35dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/log_icon_eye_default_hdpi"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/zhuce"
        android:layout_below="@+id/pwd"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:text="快速注册"/>
    <Button
        android:id="@+id/login"
        android:layout_below="@+id/zhuce"
        android:layout_marginTop="130dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_button_login"
        android:textColor="#ffffff"
        android:text="登录"
        />
    <LinearLayout
        android:id="@+id/l"
        android:layout_below="@+id/login"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <View
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="#ffffff">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方微信快速登录"
            android:textColor="#ffffff"/>
        <View
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="#ffffff">
        </View>
    </LinearLayout>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/l"
        android:layout_marginTop="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/log_icon_weixin_default_hdpi"/>
</RelativeLayout>