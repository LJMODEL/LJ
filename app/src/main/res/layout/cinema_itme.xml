<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="20dp">

    <ImageView
        android:id="@+id/cinemas_img"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/cinemas_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cinemas_img"
        android:text="cgv影院"
        android:textColor="#ffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/cinemas_neirong"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cinemas_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/cinemas_img"
        android:text="dizhiqwi"
        android:textColor="#ffff"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cinemas_name"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/com_icon_navigation_default_hdpi" />
</RelativeLayout>
