<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/details"></ImageView>

        <ImageView
            android:id="@+id/movie_item_image"
            android:layout_width="103dp"
            android:layout_height="123dp"
            android:layout_marginLeft="10dp"
            />

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/movie_item_image">

            <RelativeLayout
                android:id="@+id/relative_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/movie_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="胡桃夹子和四个王国"
                    android:layout_toLeftOf="@id/movie_item_love"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <ImageView
                    android:button="@null"
                    android:id="@+id/movie_item_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/com_icon_collection_default_hdpi"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/movie_item_content"
                android:maxLength="40"
                android:text="啦啦啦啦啦啦阿拉啊啊拉拉啊啦啦啦啦啦啦阿拉啊啊拉拉啊"
                android:textColor="#ffffff"
                android:layout_below="@id/relative_layout1"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>